<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.alex.mirash.graph.MainActivity"
    >
    <com.alex.mirash.graph.graph.view.GraphValueAxisView
        android:id="@+id/graph_value_axis"
        android:layout_width="@dimen/graph_value_axis_width"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/graph_time_axis_height"
        >
    </com.alex.mirash.graph.graph.view.GraphValueAxisView>
    <HorizontalScrollView
        android:id="@+id/graph_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/graph_value_axis_width"
        >
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            >
            <com.alex.mirash.graph.graph.view.GraphContentView
                android:id="@+id/graph_content_view"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/graph_time_axis_height"
                />
            <com.alex.mirash.graph.graph.view.GraphValueAxisView
                android:id="@+id/graph_time_axis"
                android:layout_width="match_parent"
                android:layout_height="@dimen/graph_time_axis_height"
                android:layout_gravity="bottom"
                />
        </FrameLayout>
    </HorizontalScrollView>
</FrameLayout>
